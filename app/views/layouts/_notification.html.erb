<div class ="container">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="notice">
      <h6 class="notice" align="center"><%= notice %></h6>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger alert-dismissible fade show" role="notice">
      <h6 class="notice" align="center"><%= alert %></h6>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </div>
  <% end %>
</div>